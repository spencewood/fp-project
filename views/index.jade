extends layout

block content
  h1= Project
  form(role='form', method='post', action='/projects')
    .row
      .col-md-8
        .form-group
          input.form-control(type='text', name='title', placeholder='Title')
        .form-group
          input.form-control(type='text', name='subtitle', placeholder='Subtitle')
        .form-group
          input.form-control(type='text', name='cover', placeholder='Cover Image Url', value='http://placekitten.com/600/800')
        .form-group
          textarea#editor.form-control(name='body', rows='20', placeholder='Write your story')

    button.btn.btn-default(type='submit') Submit
